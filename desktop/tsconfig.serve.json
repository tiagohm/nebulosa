{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "ES2022",
    "noFallthroughCasesInSwitch": true,
	"incremental": true,
    "types": [
      "node"
    ],
    "lib": [
      "ES2023",
	  "dom"
    ]
  },
  "files": [
    "app/main.ts",
	"app/preload.ts",
	"app/argument.parser.ts",
	"app/local.storage.ts",
	"app/window.manager.ts"
  ],
  "include": [
    "src/shared/types/*.ts",
	"src/typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}