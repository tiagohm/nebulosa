{
	"compilerOptions": {
		"sourceMap": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"module": "NodeNext",
		"target": "ES2022",
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"incremental": true,
		"types": ["node"],
		"lib": ["ESNext", "dom"]
	},
	"files": ["app/main.ts", "app/preload.ts", "app/argument.parser.ts", "app/window.manager.ts"],
	"include": ["src/shared/types/*.ts", "src/typings.d.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
