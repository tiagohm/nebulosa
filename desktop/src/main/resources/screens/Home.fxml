                    vbarPolicy="NEVER"
                    style="-fx-box-border: transparent;">
            <GridPane alignment="CENTER"
                      hgap="2.0"
                      vgap="2.0">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER"
                                       hgrow="ALWAYS"
                                       prefWidth="100.0"/>
                    <ColumnConstraints halignment="CENTER"
                                       hgrow="ALWAYS"
                                       prefWidth="100.0"/>
                    <ColumnConstraints halignment="CENTER"
                                       hgrow="ALWAYS"
                                       prefWidth="100.0"/>
