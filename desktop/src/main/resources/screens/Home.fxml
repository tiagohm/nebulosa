            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <HBox alignment="CENTER"
              spacing="4.0">
            <TextField fx:id="hostTextField"
                       focusTraversable="false"
                       prefHeight="32.0"
                       promptText="Host (localhost)"
                       HBox.hgrow="ALWAYS"/>
