<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="370.0"
            prefWidth="420.0"
            stylesheets="@css/Global.css,@css/CopyableLabel.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox layoutX="116.0"
          layoutY="132.0"
          spacing="8.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <VBox alignment="TOP_CENTER"
              spacing="4.0">
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="68.0"
                       minWidth="68.0"
                       prefWidth="68.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="RA:"/>
                <TextField fx:id="raTextField"
                           maxWidth="120.0"
                           minWidth="120.0"
                           prefWidth="120.0"
                           text="00h00m00.00s"
                           promptText="00h00m00.00s"/>
                <Label maxWidth="68.0"
                       minWidth="68.0"
                       prefWidth="68.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="DEC:"/>
                <TextField fx:id="decTextField"
                           maxWidth="120.0"
                           minWidth="120.0"
                           prefWidth="120.0"
                           text="00°00'00.00&quot;"
                           promptText="00°00'00.00&quot;"/>
            </HBox>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="40.0"
                       minWidth="40.0"
                       prefWidth="40.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="FOV:"/>
                <Spinner fx:id="fovSpinner"
                         amountToStepBy="0.1"
                         initialValue="1.0"
                         max="180.0"
                         maxWidth="60.0"
                         min="0.1"
                         minWidth="60.0"
                         prefWidth="60.0"/>
                <Label maxWidth="54.0"
                       minWidth="54.0"
                       prefWidth="54.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="Width:"/>
                <Spinner fx:id="widthSpinner"
                         amountToStepBy="0.1"
                         initialValue="1280.0"
                         max="1280.0"
                         maxWidth="80.0"
                         min="1.0"
                         minWidth="80.0"
                         prefWidth="80.0"/>
                <Label maxWidth="54.0"
                       minWidth="54.0"
                       prefWidth="54.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="Height:"/>
                <Spinner fx:id="heightSpinner"
                         amountToStepBy="0.1"
                         initialValue="1024.0"
                         max="1024.0"
                         maxWidth="80.0"
                         min="1.0"
                         minWidth="80.0"
                         prefWidth="80.0"/>
            </HBox>
            <HBox alignment="CENTER"
                  spacing="4.0">
                <Label maxWidth="100.0"
                       minWidth="100.0"
                       prefWidth="100.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="Pixel size (μm):"/>
                <Spinner fx:id="pixelSizeSpinner"
                         amountToStepBy="0.01"
                         initialValue="4.0"
                         max="100.0"
                         maxWidth="80.0"
                         min="0.01"
                         minWidth="80.0"
                         prefWidth="80.0"/>
                <Label maxWidth="100.0"
                       minWidth="100.0"
                       prefWidth="100.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="Focal length (mm):"/>
                <Spinner fx:id="focalLengthSpinner"
                         amountToStepBy="1.0"
                         initialValue="500.0"
                         max="100000.0"
                         maxWidth="80.0"
                         min="1.0"
                         minWidth="80.0"
                         prefWidth="80.0"/>
            </HBox>
            <HBox alignment="CENTER"
                  spacing="4.0">
                <Label maxWidth="100.0"
                       minWidth="100.0"
                       prefWidth="100.0"
                       styleClass="text-sm,text-bold,monospaced"
                       text="Rotation (deg):"/>
                <Spinner fx:id="rotationSpinner"
                         amountToStepBy="0.01"
                         initialValue="0.0"
                         max="360.0"
                         maxWidth="80.0"
                         min="0.0"
                         minWidth="80.0"
                         prefWidth="80.0"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
