<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import nebulosa.indi.device.camera.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="455.0"
            prefWidth="390.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="8.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <VBox alignment="CENTER"
              spacing="1.0">
            <HBox alignment="CENTER"
                  spacing="8.0">
                <ChoiceBox fx:id="cameraChoiceBox"
                           prefHeight="32.0"
                           prefWidth="394.0">
                </ChoiceBox>
                <Button fx:id="connectButton"
                        onAction="#connect"
                        alignment="CENTER"
                        mnemonicParsing="false"
                        contentDisplay="TEXT_ONLY"
                        text="&#xF1616;"
                        prefHeight="32.0"
                        minWidth="42.0"
                        styleClass="text-blue-grey-700,mdi,mdi-sm">
                </Button>
                <Button fx:id="openINDIButton"
                        onAction="#openINDI"
                        alignment="CENTER"
                        mnemonicParsing="false"
                        contentDisplay="GRAPHIC_ONLY"
                        prefHeight="32.0"
                        minWidth="42.0">
                    <graphic>
                        <ImageView fitHeight="16.0"
                                   fitWidth="16.0"
                                   pickOnBounds="true"
                                   preserveRatio="true">
                            <Image url="@icons/indi.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="&#xF01D9;"
                       alignment="CENTER"
                       prefWidth="32.0"
                       minWidth="32.0"
                       onMouseClicked="#openMenu"
                       styleClass="text-grey-700,mdi,mdi-sm,cursor-hand">
                    <fx:define>
                        <ContextMenu fx:id="menu"
                                     styleClass="text-md">
                            <items>
                                <CheckMenuItem text="Auto Save All Exposures"
                                               fx:id="autoSaveAllExposuresMenuItem"
                                               userData="BIND_TO_SELECTED_CAMERA"
                                               onAction="#toggleAutoSaveAllExposures"/>
                                <MenuItem text="Image Save Path..."
                                          userData="BIND_TO_SELECTED_CAMERA"
                                          onAction="#chooseImageSavePath"/>
                                <CheckMenuItem text="Auto Sub Folder"
                                               fx:id="autoSubFolderMenuItem"
                                               userData="BIND_TO_SELECTED_CAMERA"
                                               onAction="#toggleAutoSubFolder"/>
                                <Menu text="New Sub Folder At"
                                      userData="BIND_TO_SELECTED_CAMERA">
                                    <CheckMenuItem text="Noon"
                                                   fx:id="newSubFolderAtNoonMenuItem"
                                                   userData="NOON"
                                                   onAction="#chooseNewSubFolderAt"/>
                                    <CheckMenuItem text="Midnight"
                                                   fx:id="newSubFolderAtMidnightMenuItem"
                                                   userData="MIDNIGHT"
                                                   onAction="#chooseNewSubFolderAt"/>
                                </Menu>
                            </items>
                        </ContextMenu>
                    </fx:define>
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets top="4.0"/>
                </VBox.margin>
                <Label fx:id="autoSaveAllExposuresIcon"
                       visible="false"
                       managed="false"
                       text="&#xF0193;"
                       styleClass="text-indigo-700,mdi,mdi-xs">
                    <HBox.margin>
                        <Insets right="8.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="autoSubFolderIcon"
                       visible="false"
                       managed="false"
                       text="&#xF0257;"
                       styleClass="text-green-700,mdi,mdi-xs">
                    <HBox.margin>
                        <Insets right="8.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="imageSavePathLabel"
                       text="-"
                       onMouseClicked="#openImageSavePathInFiles"
                       styleClass="cursor-hand">
                    <graphic>
                        <Label text="&#xF024B;"
                               styleClass="text-amber-700,mdi,mdi-xs">
                        </Label>
                    </graphic>
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <Label fx:id="statusLabel"
                       text="idle">
                    <graphic>
                        <Label text="&#xF02FC;"
                               styleClass="text-blue-700,mdi,mdi-xs">
                        </Label>
                    </graphic>
                </Label>
            </HBox>
        </VBox>
        <HBox alignment="CENTER"
              spacing="12.0">
            <VBox.margin>
                <Insets top="8.0"/>
            </VBox.margin>
            <VBox alignment="CENTER"
                  spacing="1.0">
                <Label text="Cooler (100%)">
                </Label>
                <ToggleSwitch fx:id="coolerToggleSwitch"
                              prefWidth="32.0"
                              prefHeight="32.0">
                </ToggleSwitch>
            </VBox>
            <VBox alignment="CENTER"
                  spacing="1.0">
                <Label text="Dew Heater">
                </Label>
                <ToggleSwitch fx:id="dewHeaterToggleSwitch"
                              prefWidth="32.0"
                              prefHeight="32.0">
                </ToggleSwitch>
            </VBox>
            <VBox alignment="CENTER"
                  spacing="4.0">
                <Label fx:id="temperatureLabel"
                       text="Temperature (-15.0 Â°C)">
                </Label>
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <Spinner fx:id="temperatureSetpointSpinner"
                             editable="true"
                             min="-50.0"
                             max="50.0"
                             initialValue="0.0"
                             prefWidth="72.0">
                    </Spinner>
                    <Button fx:id="temperatureSetpointButton"
                            onAction="#applyTemperatureSetpoint"
                            contentDisplay="GRAPHIC_ONLY"
                            mnemonicParsing="false">
                        <graphic>
                            <Label text="&#xF012C;"
                                   styleClass="text-green-700,mdi,mdi-sm">
                            </Label>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </HBox>
        <HBox alignment="CENTER"
              spacing="8.0">
            <VBox alignment="CENTER"
                  spacing="4.0">
                <Label text="Exposure">
                </Label>
                <Spinner fx:id="exposureSpinner"
                         editable="true"
                         min="1.0"
                         max="1000000.0"
                         initialValue="1.0"
                         prefWidth="144.0">
                </Spinner>
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <fx:define>
                        <ToggleGroup fx:id="exposureUnitToggleGroup"/>
                    </fx:define>
                    <RadioButton text="m"
                                 toggleGroup="$exposureUnitToggleGroup"
                                 userData="MINUTES"
                                 onAction="#updateExposureUnit">
                    </RadioButton>
                    <RadioButton text="s"
                                 toggleGroup="$exposureUnitToggleGroup"
                                 userData="SECONDS"
                                 onAction="#updateExposureUnit">
                    </RadioButton>
                    <RadioButton text="ms"
                                 toggleGroup="$exposureUnitToggleGroup"
                                 userData="MILLISECONDS"
                                 onAction="#updateExposureUnit">
                    </RadioButton>
                    <RadioButton text="Âµs"
                                 toggleGroup="$exposureUnitToggleGroup"
                                 selected="true"
                                 userData="MICROSECONDS"
                                 onAction="#updateExposureUnit">
                    </RadioButton>
                </HBox>
            </VBox>
            <VBox alignment="CENTER_LEFT"
                  spacing="8.0">
                <HBox alignment="CENTER"
                      spacing="6.0">
                    <fx:define>
                        <ToggleGroup fx:id="exposureModeToggleGroup"/>
                    </fx:define>
                    <RadioButton text="Single"
                                 toggleGroup="$exposureModeToggleGroup"
                                 selected="true"
                                 userData="SINGLE">
                    </RadioButton>
                    <RadioButton text="Fixed"
                                 toggleGroup="$exposureModeToggleGroup"
                                 userData="FIXED">
                    </RadioButton>
                    <RadioButton text="Continuous"
                                 toggleGroup="$exposureModeToggleGroup"
                                 userData="CONTINUOUS">
                    </RadioButton>
                </HBox>
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <VBox alignment="CENTER_LEFT"
                          spacing="1.0">
                        <Label text="Delay (ms)">
                        </Label>
                        <Spinner fx:id="exposureDelaySpinner"
                                 editable="true"
                                 min="100.0"
                                 max="30000.0"
                                 initialValue="1000.0"
                                 prefWidth="96.0">
                        </Spinner>
                    </VBox>
                    <VBox alignment="CENTER_LEFT"
                          spacing="1.0">
                        <Label text="Count">
                        </Label>
                        <Spinner fx:id="exposureCountSpinner"
                                 editable="true"
                                 min="1.0"
                                 max="9999.0"
                                 initialValue="100.0"
                                 prefWidth="81.0">
                        </Spinner>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
        <HBox alignment="CENTER"
              spacing="24.0">
            <VBox alignment="CENTER"
                  spacing="4.0">
                <Label text="Subframe">
                </Label>
                <ToggleSwitch fx:id="subFrameToggleSwitch"
                              prefWidth="32.0"
                              prefHeight="32.0">
                </ToggleSwitch>
                <Button fx:id="fullsizeButton"
                        onAction="#fullsize"
                        contentDisplay="GRAPHIC_ONLY"
                        mnemonicParsing="false">
                    <graphic>
                        <Label text="&#xF0293;"
                               styleClass="text-purple-700,mdi,mdi-sm">
                        </Label>
                    </graphic>
                </Button>
            </VBox>
            <VBox alignment="CENTER"
                  spacing="4.0">
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <VBox alignment="CENTER_LEFT">
                        <Label text="X">
                        </Label>
                        <Spinner fx:id="frameXSpinner"
                                 editable="true"
                                 min="0.0"
                                 max="1279.0"
                                 initialValue="0.0"
                                 prefWidth="81.0">
                        </Spinner>
                    </VBox>
                    <VBox alignment="CENTER_LEFT">
                        <Label text="Y">
                        </Label>
                        <Spinner fx:id="frameYSpinner"
                                 editable="true"
                                 min="0.0"
                                 max="1023.0"
                                 initialValue="0.0"
                                 prefWidth="81.0">
                        </Spinner>
                    </VBox>
                    <VBox alignment="CENTER_LEFT">
                        <Label text="Bin X">
                        </Label>
                        <Spinner fx:id="binXSpinner"
                                 editable="true"
                                 min="1.0"
                                 max="4.0"
                                 initialValue="1.0"
                                 prefWidth="64.0">
                        </Spinner>
                    </VBox>
                </HBox>
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <VBox alignment="CENTER_LEFT">
                        <Label text="Width">
                        </Label>
                        <Spinner fx:id="frameWidthSpinner"
                                 editable="true"
                                 min="0.0"
                                 max="1280.0"
                                 initialValue="1280.0"
                                 prefWidth="81.0">
                        </Spinner>
                    </VBox>
                    <VBox alignment="CENTER_LEFT">
                        <Label text="Height">
                        </Label>
                        <Spinner fx:id="frameHeightSpinner"
                                 editable="true"
                                 min="0.0"
                                 max="1024.0"
                                 initialValue="1024.0"
                                 prefWidth="81.0">
                        </Spinner>
                    </VBox>
                    <VBox alignment="CENTER_LEFT">
                        <Label text="Bin Y">
                        </Label>
                        <Spinner fx:id="binYSpinner"
                                 editable="true"
                                 min="1.0"
                                 max="4.0"
                                 initialValue="1.0"
                                 prefWidth="64.0">
                        </Spinner>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
        <HBox alignment="CENTER"
              spacing="8.0">
            <fx:define>
                <FrameType fx:id="frameTypeInitialValue"
                           fx:constant="LIGHT"/>
            </fx:define>
            <VBox alignment="CENTER_LEFT"
                  spacing="1.0">
                <Label text="Frame Type">
                </Label>
                <ChoiceBox fx:id="frameTypeChoiceBox"
                           value="$frameTypeInitialValue">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <FrameType fx:value="LIGHT"/>
                            <FrameType fx:value="DARK"/>
                            <FrameType fx:value="FLAT"/>
                            <FrameType fx:value="BIAS"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </VBox>
            <VBox alignment="CENTER_LEFT"
                  spacing="1.0">
                <Label text="Frame Format">
                </Label>
                <ChoiceBox fx:id="frameFormatChoiceBox"
                           minWidth="96.0">
                </ChoiceBox>
            </VBox>
            <VBox alignment="CENTER_LEFT"
                  spacing="1.0">
                <Label text="Speed">
                </Label>
                <ChoiceBox fx:id="speedChoiceBox"
                           minWidth="96.0"
                           disable="true">
                </ChoiceBox>
            </VBox>
        </HBox>
        <HBox alignment="CENTER"
              spacing="8.0">
            <VBox alignment="CENTER_LEFT"
                  spacing="1.0">
                <Label text="Gain">
                </Label>
                <Spinner fx:id="gainSpinner"
                         editable="true"
                         min="0.0"
                         max="0.0"
                         initialValue="0.0"
                         prefWidth="92.0">
                </Spinner>
            </VBox>
            <VBox alignment="CENTER_LEFT"
                  spacing="1.0">
                <Label text="Offset">
                </Label>
                <Spinner fx:id="offsetSpinner"
                         editable="true"
                         min="0.0"
                         max="0.0"
                         initialValue="0.0"
                         prefWidth="92.0">
                </Spinner>
            </VBox>
        </HBox>
        <HBox alignment="CENTER"
              spacing="4.0">
            <Button fx:id="startCaptureButton"
                    onAction="#startCapture"
                    mnemonicParsing="false"
                    text="Start">
                <graphic>
                    <Label text="&#xF040A;"
                           styleClass="text-green-700,mdi,mdi-sm">
                    </Label>
                </graphic>
            </Button>
            <Button fx:id="abortCaptureButton"
                    onAction="#abortCapture"
                    mnemonicParsing="false"
                    text="Abort">
                <graphic>
                    <Label text="&#xF04DB;"
                           styleClass="text-red-700,mdi,mdi-sm">
                    </Label>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
