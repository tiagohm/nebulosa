<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.imageviewer.HistogramView?>
<?import org.controlsfx.control.RangeSlider?>
<?import java.lang.Integer?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="220.0"
            prefWidth="480.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <TabPane layoutX="58.0"
             layoutY="-7.0"
             prefHeight="200.0"
             prefWidth="200.0"
             tabClosingPolicy="UNAVAILABLE"
             AnchorPane.bottomAnchor="0.0"
             AnchorPane.leftAnchor="0.0"
             AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">
        <Tab closable="false"
             text="Stretch">
            <VBox alignment="TOP_CENTER"
                  prefHeight="200.0"
                  prefWidth="100.0"
                  spacing="4.0">
                <padding>
                    <Insets bottom="16.0"
                            left="32.0"
                            right="32.0"
                            top="16.0"/>
                </padding>
                <HBox alignment="CENTER_RIGHT"
                      spacing="4.0">
                    <Label text="Bit depth:"
                           styleClass="text-md">
                    </Label>
                    <ChoiceBox fx:id="bitDepth">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <Integer fx:value="8"/>
                                <Integer fx:value="16"/>
                            </FXCollections>
                        </items>
                    </ChoiceBox>
                </HBox>
                <Label text="Shadow &amp; Highlight"
                       styleClass="text-md">
                    <VBox.margin>
                        <Insets bottom="4.0"/>
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER"
                      spacing="8.0">
                    <VBox alignment="CENTER"
                          spacing="4.0">
                        <Spinner fx:id="shadow"
                                 editable="true"
                                 initialValue="0.0"
                                 min="0.0"
                                 max="255.0"
                                 amountToStepBy="0.1"
                                 prefWidth="108.0">
                        </Spinner>
                        <Spinner fx:id="highlight"
                                 editable="true"
                                 initialValue="255.0"
                                 min="0.0"
                                 max="255.0"
                                 amountToStepBy="0.1"
                                 prefWidth="108.0">
                        </Spinner>
                    </VBox>
                    <RangeSlider fx:id="shadowAndHighlight"
                                 blockIncrement="1.0"
                                 highValue="255.0"
                                 lowValue="0.0"
                                 majorTickUnit="32.0"
                                 max="255.0"
                                 min="0.0"
                                 minorTickCount="3"
                                 showTickMarks="true"
                                 showTickLabels="true"
                                 HBox.hgrow="ALWAYS">
                    </RangeSlider>
                </HBox>
                <Label text="Midtone"
                       styleClass="text-md">
                </Label>
                <HBox alignment="CENTER"
                      spacing="8.0">
                    <Spinner fx:id="midtoneSpinner"
                             editable="true"
                             initialValue="127.5"
                             min="0.0"
                             max="255.0"
                             amountToStepBy="0.1"
                             prefWidth="108.0">
                    </Spinner>
                    <Slider fx:id="midtone"
                            HBox.hgrow="ALWAYS"
                            blockIncrement="1.0"
                            majorTickUnit="32.0"
                            minorTickCount="3"
                            showTickMarks="true"
                            max="255.0"
                            showTickLabels="true"
                            value="127.5">
                    </Slider>
                </HBox>
            </VBox>
        </Tab>
        <Tab closable="false"
             text="Histogram">
            <VBox prefHeight="200.0"
                  prefWidth="100.0">
                <AnchorPane prefHeight="200.0"
                            prefWidth="200.0"
                            VBox.vgrow="ALWAYS">
                    <HistogramView fx:id="histogram"
                                   AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0"
                                   AnchorPane.topAnchor="0.0"/>
                </AnchorPane>
            </VBox>
        </Tab>
    </TabPane>
</AnchorPane>
