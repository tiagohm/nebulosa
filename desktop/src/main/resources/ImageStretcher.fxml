<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.gui.control.Histogram?>
<?import org.controlsfx.control.RangeSlider?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="200.0"
            prefWidth="400.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <TabPane prefHeight="200.0"
             prefWidth="200.0"
             tabClosingPolicy="UNAVAILABLE"
             AnchorPane.bottomAnchor="0.0"
             AnchorPane.leftAnchor="0.0"
             AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">
        <Tab closable="false"
             text="Stretch">
            <VBox alignment="TOP_CENTER"
                  prefHeight="200.0"
                  prefWidth="100.0"
                  spacing="4.0">
                <padding>
                    <Insets bottom="16.0"
                            left="32.0"
                            right="32.0"
                            top="16.0"/>
                </padding>
                <Label styleClass="text-md"
                       text="Shadow &amp; Highlight">
                    <VBox.margin>
                        <Insets bottom="4.0"/>
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER"
                      spacing="8.0">
                    <VBox alignment="CENTER"
                          spacing="4.0">
                        <Spinner fx:id="shadowSpinner"
                                 amountToStepBy="0.01"
                                 editable="true"
                                 initialValue="0.0"
                                 max="255.0"
                                 min="0.0"
                                 prefWidth="92.0">
                        </Spinner>
                        <Spinner fx:id="highlightSpinner"
                                 amountToStepBy="0.01"
                                 editable="true"
                                 initialValue="255.0"
                                 max="255.0"
                                 min="0.0"
                                 prefWidth="92.0">
                        </Spinner>
                    </VBox>
                    <RangeSlider fx:id="shadowAndHighlightRangeSlider"
                                 blockIncrement="1.0"
                                 highValue="255.0"
                                 lowValue="0.0"
                                 majorTickUnit="32.0"
                                 max="255.0"
                                 min="0.0"
                                 minorTickCount="3"
                                 showTickLabels="true"
                                 showTickMarks="true"
                                 HBox.hgrow="ALWAYS">
                    </RangeSlider>
                </HBox>
                <Label styleClass="text-md"
                       text="Midtone">
                </Label>
                <HBox alignment="CENTER"
                      spacing="8.0">
                    <Spinner fx:id="midtoneSpinner"
                             amountToStepBy="0.01"
                             editable="true"
                             initialValue="127.5"
                             max="255.0"
                             min="0.0"
                             prefWidth="92.0">
                    </Spinner>
                    <Slider fx:id="midtoneSlider"
                            blockIncrement="1.0"
                            majorTickUnit="32.0"
                            max="255.0"
                            minorTickCount="3"
                            showTickLabels="true"
                            showTickMarks="true"
                            value="127.5"
                            HBox.hgrow="ALWAYS">
                    </Slider>
                </HBox>
            </VBox>
        </Tab>
        <Tab closable="false"
             text="Histogram">
            <VBox prefHeight="200.0"
                  prefWidth="100.0">
                <AnchorPane prefHeight="200.0"
                            prefWidth="200.0"
                            VBox.vgrow="ALWAYS">
                    <Histogram fx:id="histogram"
                               AnchorPane.bottomAnchor="0.0"
                               AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="0.0"
                               AnchorPane.topAnchor="0.0"/>
                </AnchorPane>
            </VBox>
        </Tab>
    </TabPane>
</AnchorPane>
