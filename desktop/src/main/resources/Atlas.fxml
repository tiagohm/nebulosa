<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.gui.control.AltitudeChart?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="590.0"
            prefWidth="480.0"
            stylesheets="@css/Global.css,@css/CopyableLabel.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="8.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <TabPane fx:id="ephemerisTabPane"
                 VBox.vgrow="ALWAYS">
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Sun"
                 userData="SUN">
                <VBox alignment="CENTER">
                    <ImageView fx:id="sunImageView"
                               cache="true"
                               fitHeight="260.0"
                               pickOnBounds="true"
                               preserveRatio="true">
                    </ImageView>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Moon"
                 userData="MOON">
                <VBox alignment="CENTER">
                    <ImageView fx:id="moonImageView"
                               cache="true"
                               fitHeight="260.0"
                               pickOnBounds="true"
                               preserveRatio="true">
                    </ImageView>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Planets"
                 userData="PLANET">
                <TableView fx:id="planetTableView"
                           fixedCellSize="28.0"
                           maxHeight="268.0"
                           minHeight="268.0"
                           prefHeight="268.0">
                    <columns>
                        <TableColumn prefWidth="170.0"
                                     style="-fx-alignment: CENTER;"
                                     text="Name"/>
                        <TableColumn prefWidth="130.0"
                                     style="-fx-alignment: CENTER-LEFT;"
                                     text="Type"/>
                    </columns>
                </TableView>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Minor Planets"
                 userData="MINOR_PLANET">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchMinorPlanetTextField"
                                   styleClass="text-md">
                        </TextField>
                        <Button onAction="#searchMinorPlanet"
                                text="Search">
                            <graphic>
                                <Label styleClass="text-blue-grey-700,mdi,mdi-sm"
                                       text="󰍉"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <TableView fx:id="minorPlanetTableView"
                               fixedCellSize="28.0"
                               maxHeight="230.0"
                               minHeight="230.0"
                               prefHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="70.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Element"/>
                            <TableColumn prefWidth="180.0"
                                         style="-fx-alignment: CENTER-LEFT;"
                                         text="Description"/>
                            <TableColumn prefWidth="190.0"
                                         style="-fx-alignment: CENTER-RIGHT;"
                                         text="Value"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Named Stars"
                 userData="STAR">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchStarTextField"
                                   styleClass="text-md">
                        </TextField>
                        <Button onAction="#searchStar"
                                text="Search">
                            <graphic>
                                <Label styleClass="text-blue-grey-700,mdi,mdi-sm"
                                       text="󰍉"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <TableView fx:id="starTableView"
                               fixedCellSize="28.0"
                               maxHeight="230.0"
                               minHeight="230.0"
                               prefHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="140.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Name"/>
                            <TableColumn prefWidth="100.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Magnitude">
                            </TableColumn>
                            <TableColumn prefWidth="180.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Type">
                            </TableColumn>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="DSOs"
                 userData="DSO">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchDSOTextField"
                                   styleClass="text-md">
                        </TextField>
                        <Button onAction="#searchDSO"
                                text="Search">
                            <graphic>
                                <Label styleClass="text-blue-grey-700,mdi,mdi-sm"
                                       text="󰍉"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <TableView fx:id="dsoTableView"
                               fixedCellSize="28.0"
                               maxHeight="230.0"
                               minHeight="230.0"
                               prefHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="140.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Name"/>
                            <TableColumn prefWidth="100.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Magnitude">
                            </TableColumn>
                            <TableColumn prefWidth="180.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Type">
                            </TableColumn>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
        <VBox alignment="CENTER"
              spacing="2.0">
            <padding>
                <Insets bottom="2.0"
                        left="16.0"
                        right="16.0"
                        top="2.0"/>
            </padding>
            <HBox alignment="CENTER">
                <Label fx:id="nameLabel"
                       alignment="CENTER"
                       styleClass="text-md,text-bold"
                       text="Sun">
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="RA:">
                </Label>
                <TextField fx:id="rightAscensionTextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="00h 00m 00.00s">
                </TextField>
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="DEC:">
                    <HBox.margin>
                        <Insets left="8.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="declinationTextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="+00° 00' 00.00&quot;">
                </TextField>
            </HBox>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="RA (J2000):">
                </Label>
                <TextField fx:id="rightAscensionJ2000TextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="00h 00m 00.00s">
                </TextField>
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="DEC (J2000):">
                    <HBox.margin>
                        <Insets left="8.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="declinationJ2000TextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="+00° 00' 00.00&quot;">
                </TextField>
            </HBox>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="Azimuth:">
                </Label>
                <TextField fx:id="azimuthTextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="000° 00' 00.00&quot;">
                </TextField>
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="Altitude:">
                    <HBox.margin>
                        <Insets left="8.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="altitudeTextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefHeight="10.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="+00° 00' 00.00&quot;">
                </TextField>
            </HBox>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="Constellation:">
                </Label>
                <TextField fx:id="constellationTextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="-">
                </TextField>
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       styleClass="text-sm,text-bold"
                       text="RTS:">
                    <HBox.margin>
                        <Insets left="8.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="rtsTextField"
                           alignment="CENTER_RIGHT"
                           editable="false"
                           maxWidth="140.0"
                           minWidth="140.0"
                           prefWidth="140.0"
                           styleClass="copyable,text-monospaced,text-sm"
                           text="00:00 | 00:00 | 00:00">
                </TextField>
            </HBox>
        </VBox>
        <HBox alignment="TOP_CENTER"
              spacing="4.0">
            <Button fx:id="goToButton"
                    onAction="#goTo"
                    prefWidth="92.0"
                    text="Go To">
                <graphic>
                    <Label styleClass="mdi,mdi-sm,text-blue-grey-700"
                           text="󰄬">
                    </Label>
                </graphic>
            </Button>
            <Button fx:id="slewToButton"
                    onAction="#slewTo"
                    prefWidth="92.0"
                    text="Slew To">
                <graphic>
                    <Label styleClass="mdi,mdi-sm,text-blue-grey-700"
                           text="󰄬">
                    </Label>
                </graphic>
            </Button>
            <Button fx:id="syncButton"
                    onAction="#sync"
                    prefWidth="92.0"
                    text="Sync">
                <graphic>
                    <Label styleClass="mdi,mdi-sm,text-blue-grey-700"
                           text="󰓦">
                    </Label>
                </graphic>
            </Button>
            <Button fx:id="frameButton"
                    onAction="#frame"
                    prefWidth="92.0"
                    text="Frame">
                <graphic>
                    <Label styleClass="mdi,mdi-sm,text-blue-grey-700"
                           text="󰋩">
                    </Label>
                </graphic>
            </Button>
        </HBox>
        <AltitudeChart fx:id="altitudeChart"
                       maxHeight="130.0"
                       minHeight="130.0"
                       prefHeight="130.0">
        </AltitudeChart>
    </VBox>
</AnchorPane>
