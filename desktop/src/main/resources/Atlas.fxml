<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.gui.control.AltitudeGraph?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="570.0"
            prefWidth="480.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="8.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <TabPane fx:id="ephemerisTabPane"
                 VBox.vgrow="ALWAYS">
            <Tab text="Sun"
                 closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 userData="SUN">
                <VBox alignment="CENTER">
                    <ImageView fx:id="sunImageView"
                               pickOnBounds="true"
                               preserveRatio="true"
                               fitHeight="260.0"
                               cache="true">
                    </ImageView>
                </VBox>
            </Tab>
            <Tab text="Moon"
                 closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 userData="MOON">
                <VBox alignment="CENTER">
                    <ImageView fx:id="moonImageView"
                               pickOnBounds="true"
                               preserveRatio="true"
                               fitHeight="260.0"
                               cache="true">
                    </ImageView>
                </VBox>
            </Tab>
            <Tab text="Planets"
                 closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 userData="PLANET">
                <TableView fx:id="planetsTableView"
                           fixedCellSize="28.0"
                           minHeight="300.0"
                           prefHeight="300.0"
                           maxHeight="300.0">
                    <columns>
                        <TableColumn prefWidth="170.0"
                                     style="-fx-alignment: CENTER;"
                                     text="Name"/>
                        <TableColumn prefWidth="130.0"
                                     style="-fx-alignment: CENTER-LEFT;"
                                     text="Type"/>
                    </columns>
                </TableView>
            </Tab>
            <Tab text="Minor Planets"
                 closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 userData="MINOR_PLANET">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchMinorPlanetTextField"
                                   styleClass="text-md">
                        </TextField>
                        <Button text="Search"
                                onAction="#searchMinorPlanet">
                            <graphic>
                                <Label text="&#xF0349;"
                                       styleClass="text-blue-grey-700,mdi,mdi-sm"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <TableView fx:id="minorPlanetsTableView"
                               fixedCellSize="28.0"
                               minHeight="230.0"
                               prefHeight="230.0"
                               maxHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="70.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Element"/>
                            <TableColumn prefWidth="180.0"
                                         style="-fx-alignment: CENTER-LEFT;"
                                         text="Description"/>
                            <TableColumn prefWidth="190.0"
                                         style="-fx-alignment: CENTER-RIGHT;"
                                         text="Value"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Stars"
                 closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 userData="STAR">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchStarTextField"
                                   styleClass="text-md">
                        </TextField>
                        <Button text="Search"
                                onAction="#searchStar">
                            <graphic>
                                <Label text="&#xF0349;"
                                       styleClass="text-blue-grey-700,mdi,mdi-sm"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <TableView fx:id="starsTableView"
                               fixedCellSize="28.0"
                               minHeight="230.0"
                               prefHeight="230.0"
                               maxHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="140.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Name"/>
                            <TableColumn prefWidth="130.0"
                                         style="-fx-alignment: CENTER;"
                                         text="P.M. (mas/yr)">
                                <columns>
                                    <TableColumn prefWidth="65.0"
                                                 style="-fx-alignment: CENTER;"
                                                 text="RA"/>
                                    <TableColumn prefWidth="65.0"
                                                 style="-fx-alignment: CENTER;"
                                                 text="DEC"/>
                                </columns>
                            </TableColumn>
                            <TableColumn prefWidth="90.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Parallax (mas)"/>
                            <TableColumn prefWidth="110.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Radial vel. (km/s)"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="DSOs"
                 closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 userData="DSO"
            />
        </TabPane>
        <VBox alignment="CENTER"
              spacing="4.0">
            <padding>
                <Insets topRightBottomLeft="16.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       text="RA"
                       styleClass="text-sm,text-bold">
                </Label>
                <Label fx:id="rightAscensionLabel"
                       alignment="CENTER_RIGHT"
                       maxWidth="140.0"
                       minWidth="140.0"
                       prefWidth="140.0"
                       text="00h 00m 00.00s"
                       styleClass="text-monospaced,text-sm">
                </Label>
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       text="DEC"
                       styleClass="text-sm,text-bold">
                    <HBox.margin>
                        <Insets left="8.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="declinationLabel"
                       alignment="CENTER_RIGHT"
                       maxWidth="140.0"
                       minWidth="140.0"
                       prefWidth="140.0"
                       text="+00째 00' 00.00&quot;"
                       styleClass="text-monospaced,text-sm">
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       text="RA (J2000)"
                       styleClass="text-sm,text-bold">
                </Label>
                <Label fx:id="rightAscensionJ2000Label"
                       alignment="CENTER_RIGHT"
                       maxWidth="140.0"
                       minWidth="140.0"
                       prefWidth="140.0"
                       text="00h 00m 00.00s"
                       styleClass="text-monospaced,text-sm">
                </Label>
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       text="DEC (J2000)"
                       styleClass="text-sm,text-bold">
                    <HBox.margin>
                        <Insets left="8.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="declinationJ2000Label"
                       alignment="CENTER_RIGHT"
                       maxWidth="140.0"
                       minWidth="140.0"
                       prefWidth="140.0"
                       text="+00째 00' 00.00&quot;"
                       styleClass="text-monospaced,text-sm">
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       text="Azimuth"
                       styleClass="text-sm,text-bold">
                </Label>
                <Label fx:id="azimuthLabel"
                       alignment="CENTER_RIGHT"
                       maxWidth="140.0"
                       minWidth="140.0"
                       prefWidth="140.0"
                       text="000째 00' 00.00&quot;"
                       styleClass="text-monospaced,text-sm">
                </Label>
                <Label maxWidth="72.0"
                       minWidth="72.0"
                       prefWidth="72.0"
                       text="Altitude"
                       styleClass="text-sm,text-bold">
                    <HBox.margin>
                        <Insets left="8.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="altitudeLabel"
                       alignment="CENTER_RIGHT"
                       maxWidth="140.0"
                       minWidth="140.0"
                       prefWidth="140.0"
                       text="+00째 00' 00.00&quot;"
                       styleClass="text-monospaced,text-sm">
                </Label>
            </HBox>
        </VBox>
        <HBox alignment="TOP_CENTER"
              spacing="4.0">
            <Button fx:id="goToButton"
                    text="Go To"
                    onAction="#goTo"
                    prefWidth="92.0">
                <graphic>
                    <Label text="&#xF012C;"
                           styleClass="mdi,mdi-sm,text-green-700">
                    </Label>
                </graphic>
            </Button>
            <Button fx:id="slewToButton"
                    text="Slew To"
                    onAction="#slewTo"
                    prefWidth="92.0">
                <graphic>
                    <Label text="&#xF012C;"
                           styleClass="mdi,mdi-sm,text-green-700">
                    </Label>
                </graphic>
            </Button>
            <Button fx:id="syncButton"
                    text="Sync"
                    onAction="#sync"
                    prefWidth="92.0">
                <graphic>
                    <Label text="&#xF04E6;"
                           styleClass="mdi,mdi-sm,text-blue-700">
                    </Label>
                </graphic>
            </Button>
        </HBox>
        <AnchorPane prefHeight="130.0"
                    minHeight="130.0"
                    maxHeight="130.0">
            <AltitudeGraph fx:id="altitudeGraph"
                           AnchorPane.bottomAnchor="0.0"
                           AnchorPane.rightAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.topAnchor="0.0"
                           height="130.0">
            </AltitudeGraph>
        </AnchorPane>
    </VBox>
</AnchorPane>
