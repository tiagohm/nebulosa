<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.gui.control.*?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefWidth="480.0"
            stylesheets="@css/Global.css,@css/CopyableLabel.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="4.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <TabPane fx:id="ephemerisTabPane"
                 VBox.vgrow="ALWAYS">
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Sun"
                 userData="SUN">
                <VBox alignment="CENTER">
                    <SunView fx:id="sunView"
                             height="256.0"
                             width="256.0"/>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Moon"
                 userData="MOON">
                <VBox alignment="CENTER">
                    <MoonView fx:id="moonView"
                              height="256.0"
                              width="256.0"/>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Planets"
                 userData="PLANET">
                <TableView fx:id="planetTableView"
                           fixedCellSize="32.0"
                           maxHeight="268.0"
                           minHeight="268.0"
                           prefHeight="268.0">
                    <columns>
                        <TableColumn prefWidth="170.0"
                                     style="-fx-alignment: CENTER;"
                                     text="Name"/>
                        <TableColumn prefWidth="130.0"
                                     style="-fx-alignment: CENTER-LEFT;"
                                     text="Type"/>
                    </columns>
                </TableView>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Minor Planets"
                 userData="MINOR_PLANET">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchMinorPlanetTextField"
                                   styleClass="text-md"/>
                        <MaterialIconButton onAction="#searchMinorPlanet"
                                            text="Search"
                                            icon="magnify"/>
                    </HBox>
                    <TableView fx:id="minorPlanetTableView"
                               fixedCellSize="32.0"
                               maxHeight="230.0"
                               minHeight="230.0"
                               prefHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="90.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Element"/>
                            <TableColumn prefWidth="180.0"
                                         style="-fx-alignment: CENTER-LEFT;"
                                         text="Description"/>
                            <TableColumn prefWidth="190.0"
                                         style="-fx-alignment: CENTER-RIGHT;"
                                         text="Value"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="Named Stars"
                 userData="STAR">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchStarTextField"
                                   styleClass="text-md"/>
                        <MaterialIconButton onAction="#searchStar"
                                            text="Search"
                                            icon="magnify"/>
                    </HBox>
                    <TableView fx:id="starTableView"
                               fixedCellSize="32.0"
                               maxHeight="230.0"
                               minHeight="230.0"
                               prefHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="140.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Name"/>
                            <TableColumn prefWidth="100.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Magnitude"/>
                            <TableColumn prefWidth="180.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Type"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab closable="false"
                 onSelectionChanged="#tabSelectionChanged"
                 text="DSOs"
                 userData="DSO">
                <VBox alignment="TOP_CENTER"
                      spacing="4.0">
                    <HBox alignment="CENTER"
                          spacing="4.0">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                        <TextField fx:id="searchDSOTextField"
                                   styleClass="text-md"/>
                        <MaterialIconButton onAction="#searchDSO"
                                            text="Search"
                                            icon="magnify"/>
                    </HBox>
                    <TableView fx:id="dsoTableView"
                               fixedCellSize="32.0"
                               maxHeight="230.0"
                               minHeight="230.0"
                               prefHeight="230.0">
                        <columns>
                            <TableColumn prefWidth="140.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Name"/>
                            <TableColumn prefWidth="100.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Magnitude"/>
                            <TableColumn prefWidth="180.0"
                                         style="-fx-alignment: CENTER;"
                                         text="Type"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
        <VBox alignment="CENTER"
              spacing="2.0">
            <padding>
                <Insets bottom="2.0"
                        left="16.0"
                        right="16.0"
                        top="2.0"/>
            </padding>
            <HBox alignment="CENTER">
                <Label fx:id="nameLabel"
                       alignment="CENTER"
                       styleClass="text-md,text-bold"
                       text="Sun"/>
            </HBox>
            <GridPane vgap="4.0"
                      hgap="4.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <LabeledPane text="RA"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="0">
                    <TextField fx:id="rightAscensionTextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="00h 00m 00.00s"/>
                </LabeledPane>
                <LabeledPane text="DEC"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="1">
                    <TextField fx:id="declinationTextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="+00째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="RA (J2000)"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="2">
                    <TextField fx:id="rightAscensionJ2000TextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="00h 00m 00.00s"/>
                </LabeledPane>
                <LabeledPane text="DEC (J2000)"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="3">
                    <TextField fx:id="declinationJ2000TextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="+00째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="Azimuth"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="0">
                    <TextField fx:id="azimuthTextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="000째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="Altitude"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="1">
                    <TextField fx:id="altitudeTextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="+00째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="Distance"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="2">
                    <TextField fx:id="distanceTextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="-"/>
                </LabeledPane>
                <LabeledPane text="Constellation"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="3">
                    <TextField fx:id="constellationTextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="-"/>
                </LabeledPane>
                <LabeledPane text="RTS"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="2"
                             GridPane.columnIndex="0"
                             GridPane.columnSpan="2">
                    <TextField fx:id="rtsTextField"
                               editable="false"
                               styleClass="copyable,text-sm"
                               text="00:00 | 00:00 | 00:00"/>
                </LabeledPane>
            </GridPane>
        </VBox>
        <HBox alignment="TOP_CENTER"
              spacing="4.0">
            <MaterialIconButton fx:id="goToButton"
                                onAction="#goTo"
                                prefWidth="92.0"
                                text="Go To"
                                icon="check"
                                color="green-500"/>
            <MaterialIconButton fx:id="slewToButton"
                                onAction="#slewTo"
                                prefWidth="92.0"
                                text="Slew To"
                                icon="check"
                                color="green-500"/>
            <MaterialIconButton fx:id="syncButton"
                                onAction="#sync"
                                prefWidth="92.0"
                                text="Sync"
                                icon="sync"/>
            <MaterialIconButton fx:id="frameButton"
                                onAction="#frame"
                                prefWidth="92.0"
                                text="Frame"
                                icon="image"/>
        </HBox>
        <AltitudeChart fx:id="altitudeChart"
                       maxHeight="130.0"
                       minHeight="130.0"
                       prefHeight="130.0"/>
    </VBox>
</AnchorPane>
