<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import nebulosa.imaging.algorithms.*?>
<?import nebulosa.imaging.ImageChannel?>
<?import org.controlsfx.control.ToggleSwitch?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="120.0"
            prefWidth="340.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="TOP_CENTER"
          spacing="8.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <HBox alignment="CENTER_LEFT"
              spacing="8.0">
            <VBox spacing="1.0">
                <Label text="Channel"
                       styleClass="text-md">
                </Label>
                <fx:define>
                    <ImageChannel fx:id="channelInitialValue"
                                  fx:constant="GREEN"/>
                </fx:define>
                <ChoiceBox fx:id="channelChoiceBox"
                           prefWidth="308.0"
                           value="$channelInitialValue">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <ImageChannel fx:value="RED"/>
                            <ImageChannel fx:value="GREEN"/>
                            <ImageChannel fx:value="BLUE"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </VBox>
            <VBox spacing="1.0">
                <Label text="Protection method"
                       styleClass="text-md">
                </Label>
                <fx:define>
                    <ProtectionMethod fx:id="protectionMethodInitialValue"
                                      fx:constant="AVERAGE_NEUTRAL"/>
                </fx:define>
                <ChoiceBox fx:id="protectionMethodChoiceBox"
                           prefWidth="308.0"
                           value="$protectionMethodInitialValue">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <ProtectionMethod fx:value="MAXIMUM_MASK"/>
                            <ProtectionMethod fx:value="ADDTIVIVE_MASK"/>
                            <ProtectionMethod fx:value="AVERAGE_NEUTRAL"/>
                            <ProtectionMethod fx:value="MAXIMUM_NEUTRAL"/>
                            <ProtectionMethod fx:value="MINIMUM_NEUTRAL"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </VBox>
        </HBox>
        <HBox alignment="CENTER"
              spacing="16.0">
            <VBox alignment="CENTER_LEFT"
                  spacing="1.0">
                <Label text="Amount"
                       styleClass="text-md">
                </Label>
                <Spinner fx:id="amountSpinner"
                         editable="true"
                         min="0.0"
                         max="1.0"
                         amountToStepBy="0.01"
                         initialValue="0.5"
                         prefWidth="144.0">
                </Spinner>
            </VBox>
            <VBox alignment="CENTER"
                  spacing="1.0">
                <Label text="Enabled"
                       styleClass="text-md">
                </Label>
                <ToggleSwitch fx:id="enabledToggleSwitch"
                              prefHeight="32.0"
                              prefWidth="32.0"
                              styleClass="text-md">
                </ToggleSwitch>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
