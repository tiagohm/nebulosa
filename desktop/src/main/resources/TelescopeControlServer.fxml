<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.telescopecontrol.TelescopeControlServerType?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="100.0"
            prefWidth="310.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="16.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <HBox alignment="CENTER">
            <ChoiceBox fx:id="types"
                       HBox.hgrow="ALWAYS">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <TelescopeControlServerType fx:constant="STELLARIUM"/>
                        <TelescopeControlServerType fx:constant="LX200"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
        </HBox>
        <HBox alignment="CENTER"
              spacing="8.0">
            <TextField fx:id="host"
                       prefHeight="32.0"
                       HBox.hgrow="ALWAYS"
                       focusTraversable="false"
                       promptText="Host (0.0.0.0)">
            </TextField>
            <TextField fx:id="port"
                       prefHeight="32.0"
                       prefWidth="94.0"
                       focusTraversable="false"
                       promptText="Port">
            </TextField>
            <Button fx:id="connect"
                    onAction="#connect"
                    alignment="CENTER"
                    mnemonicParsing="false"
                    contentDisplay="TEXT_ONLY"
                    styleClass="mdi,mdi-sm,text-blue-grey-700"
                    text="&#xF1616;"
                    prefHeight="32.0">
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
