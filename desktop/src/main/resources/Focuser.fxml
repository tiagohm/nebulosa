<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="275.0"
            prefWidth="381.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="8.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <HBox alignment="CENTER"
              spacing="8.0">
            <ChoiceBox fx:id="focuserChoiceBox"
                       prefHeight="32.0"
                       prefWidth="394.0">
            </ChoiceBox>
            <Button fx:id="connectButton"
                    onAction="#connect"
                    alignment="CENTER"
                    contentDisplay="TEXT_ONLY"
                    text="&#xF1616;"
                    styleClass="text-blue-grey-700,mdi,mdi-sm"
                    prefHeight="32.0"
                    minWidth="42.0">
            </Button>
            <Button fx:id="openINDIButton"
                    onAction="#openINDIPanelControl"
                    alignment="CENTER"
                    mnemonicParsing="false"
                    contentDisplay="GRAPHIC_ONLY"
                    prefHeight="32.0"
                    minWidth="42.0">
                <graphic>
                    <ImageView fitHeight="16.0"
                               fitWidth="16.0"
                               pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@icons/indi.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <VBox alignment="CENTER"
              spacing="4.0">
            <HBox alignment="CENTER_LEFT"
                  spacing="8.0">
                <Label text="Position:"
                       prefWidth="81.0"
                       maxWidth="81.0"
                       minWidth="81.0"
                       styleClass="text-sm,text-bold">
                </Label>
                <Label fx:id="positionLabel"
                       text="0"
                       alignment="CENTER_RIGHT"
                       prefWidth="81.0"
                       maxWidth="81.0"
                       minWidth="81.0"
                       styleClass="text-md">
                </Label>
                <Label text="Temperature:"
                       prefWidth="81.0"
                       maxWidth="81.0"
                       minWidth="81.0"
                       styleClass="text-sm,text-bold">
                </Label>
                <Label fx:id="temperatureLabel"
                       text="0.0 Â°C"
                       alignment="CENTER_RIGHT"
                       prefWidth="81.0"
                       maxWidth="81.0"
                       minWidth="81.0"
                       styleClass="text-md">
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <Label fx:id="statusLabel"
                       text="idle">
                    <graphic>
                        <Label text="&#xF02FC;"
                               styleClass="text-blue-700,mdi,mdi-xs">
                        </Label>
                    </graphic>
                </Label>
            </HBox>
        </VBox>
        <VBox alignment="CENTER_LEFT"
              spacing="1.0">
            <Label text="Relative:"
                   styleClass="text-sm">
            </Label>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Spinner fx:id="incrementSpinner"
                         editable="true"
                         min="1.0"
                         max="10000.0"
                         initialValue="100.0"
                         amountToStepBy="1.0"
                         prefWidth="138.0">
                </Spinner>
                <Button fx:id="moveInButton"
                        text="Move In"
                        onAction="#moveIn">
                    <graphic>
                        <Label text="&#xF004D;"
                               styleClass="mdi,mdi-sm,text-green-800">
                        </Label>
                    </graphic>
                </Button>
                <Button fx:id="moveOutButton"
                        text="Move Out"
                        onAction="#moveOut">
                    <graphic>
                        <Label text="&#xF0054;"
                               styleClass="mdi,mdi-sm,text-green-800">
                        </Label>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
        <VBox alignment="CENTER_LEFT"
              spacing="1.0">
            <Label text="Absolute:"
                   styleClass="text-sm">
            </Label>
            <HBox alignment="CENTER_LEFT"
                  spacing="4.0">
                <Spinner fx:id="absoluteSpinner"
                         editable="true"
                         min="0.0"
                         max="10000.0"
                         initialValue="1000.0"
                         amountToStepBy="1.0"
                         prefWidth="120.0">
                </Spinner>
                <Button fx:id="moveToButton"
                        text="Move To"
                        onAction="#moveTo"
                        prefWidth="144.0">
                    <graphic>
                        <Label text="&#xF0E73;"
                               styleClass="mdi,mdi-sm,text-blue-800">
                        </Label>
                    </graphic>
                </Button>
                <Button fx:id="syncButton"
                        text="Sync"
                        onAction="#sync"
                        prefWidth="92.0">
                    <graphic>
                        <Label text="&#xF04E6;"
                               styleClass="mdi,mdi-sm,text-blue-700">
                        </Label>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
        <HBox alignment="CENTER_LEFT"
              spacing="4.0">
            <ToggleSwitch fx:id="backlashCompensationToggleSwitch"
                          text="Backlash compensation:"
                          prefWidth="172.0"
                          styleClass="text-sm">
            </ToggleSwitch>
            <Label text="Steps:"
                   styleClass="text-sm">
                <HBox.margin>
                    <Insets left="16.0"/>
                </HBox.margin>
            </Label>
            <Spinner fx:id="backlashCompensationStepsSpinner"
                     editable="true"
                     min="0.0"
                     max="1000.0"
                     initialValue="100.0"
                     amountToStepBy="1.0"
                     prefWidth="84.0">
            </Spinner>
        </HBox>
        <HBox alignment="CENTER_LEFT"
              spacing="129.0">
            <Button fx:id="abortButton"
                    text="Abort"
                    onAction="#abort">
                <graphic>
                    <Label text="&#xF04DB;"
                           styleClass="mdi,mdi-sm,text-red-700">
                    </Label>
                </graphic>
            </Button>
            <Button fx:id="autoFocusButton"
                    text="Auto focus"
                    onAction="#openAutoFocus"
                    prefWidth="144.0">
                <graphic>
                    <Label text="&#xF0F4E;"
                           textFill="#388E3C"
                           styleClass="mdi,mdi-sm,text-purple-800">
                    </Label>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
