<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.gui.control.*?>
<?import org.controlsfx.control.SegmentedButton?>
<?import org.controlsfx.control.ToggleSwitch?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefWidth="412.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="6.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <HBox alignment="CENTER"
              spacing="4.0">
            <ChoiceBox fx:id="mountChoiceBox"
                       prefHeight="32.0"
                       prefWidth="394.0">
            </ChoiceBox>
            <TwoStateButton fx:id="connectButton"
                            onAction="#connect"
                            stateOnStyleClass="mdi,mdi-sm,text-red-500"
                            stateOffStyleClass="mdi,mdi-sm,text-blue-700"
                            stateOnIcon="󰅙"
                            stateOffIcon="󱘖">
            </TwoStateButton>
            <IconButton fx:id="openINDIButton"
                        onAction="#openINDIPanelControl">
                <image>
                    <Image url="@icons/indi.png"/>
                </image>
            </IconButton>
        </HBox>
        <VBox alignment="CENTER"
              spacing="2.0">
            <GridPane hgap="4.0"
                      vgap="4.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <LabeledPane text="RA"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="0">
                    <Label fx:id="rightAscensionLabel"
                           styleClass="text-sm"
                           text="00h 00m 00.00s">
                    </Label>
                </LabeledPane>
                <LabeledPane text="DEC"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="1">
                    <Label fx:id="declinationLabel"
                           styleClass="text-sm"
                           text="+00° 00' 00.00&quot;">
                    </Label>
                </LabeledPane>
                <LabeledPane text="RA (J2000)"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="2">
                    <Label fx:id="rightAscensionJ2000Label"
                           styleClass="text-sm"
                           text="00h 00m 00.00s">
                    </Label>
                </LabeledPane>
                <LabeledPane text="DEC (J2000)"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="3">
                    <Label fx:id="declinationJ2000Label"
                           styleClass="text-sm"
                           text="+00° 00' 00.00&quot;">
                    </Label>
                </LabeledPane>
                <LabeledPane text="Azimuth"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="0">
                    <Label fx:id="azimuthLabel"
                           styleClass="text-sm"
                           text="000° 00' 00.00&quot;">
                    </Label>
                </LabeledPane>
                <LabeledPane text="Altitude"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="1">
                    <Label fx:id="altitudeLabel"
                           styleClass="text-sm"
                           text="+00° 00' 00.00&quot;">
                    </Label>
                </LabeledPane>
                <LabeledPane text="LST"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="2">
                    <Label fx:id="lstLabel"
                           styleClass="text-sm"
                           text="00:00:00">
                    </Label>
                </LabeledPane>
                <LabeledPane text="Constellation"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="3">
                    <Label fx:id="constellationLabel"
                           styleClass="text-sm"
                           text="-">
                    </Label>
                </LabeledPane>
                <LabeledPane text="Meridian at"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="2"
                             GridPane.columnIndex="0"
                             GridPane.columnSpan="2">
                    <Label fx:id="meridianAtLabel"
                           styleClass="text-sm"
                           text="00:00:00 (-00:00:00)">
                    </Label>
                </LabeledPane>
                <LabeledPane text="Pier"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="2"
                             GridPane.columnIndex="2">
                    <Label fx:id="pierSideLabel"
                           styleClass="text-sm"
                           text="NEITHER">
                    </Label>
                </LabeledPane>
                <LabeledPane text="Status"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="2"
                             GridPane.columnIndex="3">
                    <graphic>
                        <Label styleClass="text-blue-700,mdi,mdi-xs"
                               text="󰋼">
                        </Label>
                    </graphic>
                    <Label fx:id="statusLabel"
                           text="idle">
                    </Label>
                </LabeledPane>
            </GridPane>
        </VBox>
        <HBox alignment="CENTER_LEFT"
              spacing="4.0">
            <Label styleClass="text-md"
                   text="Target Coordinates:">
                <graphic>
                    <Label styleClass="mdi,mdi-xs"
                           text="󰓾">
                    </Label>
                </graphic>
            </Label>
            <SegmentedButton fx:id="targetCoordinatesEquinoxSegmentedButton">
                <buttons>
                    <ToggleButton styleClass="text-sm"
                                  text="JNow"
                                  userData="JNOW">
                    </ToggleButton>
                    <ToggleButton selected="true"
                                  styleClass="text-sm"
                                  text="J2000"
                                  userData="J2000">
                    </ToggleButton>
                </buttons>
            </SegmentedButton>
            <HBox alignment="CENTER"
                  spacing="4.0"
                  HBox.hgrow="ALWAYS">
                <Button fx:id="siteAndTimeButton"
                        onAction="#openSiteAndTime"
                        styleClass="mdi,mdi-sm,text-red-500"
                        text="󰍎">
                </Button>
                <Button fx:id="telescopeControlServerButton"
                        onAction="#openTelescopeControlServer"
                        styleClass="mdi,mdi-sm,text-blue-700"
                        text="󰻅">
                </Button>
            </HBox>
        </HBox>
        <VBox alignment="CENTER_LEFT"
              spacing="4.0">
            <VBox.margin>
                <Insets top="8.0"/>
            </VBox.margin>
            <StackPane>
                <HBox spacing="4.0"
                      StackPane.alignment="CENTER_LEFT">
                    <LabeledPane text="RA (hours)"
                                 textStyleClass="text-bold">
                        <TextField fx:id="targetRightAscensionTextField"
                                   text="00 00 00.0">
                        </TextField>
                    </LabeledPane>
                    <LabeledPane text="DEC (hours)"
                                 textStyleClass="text-bold">
                        <TextField fx:id="targetDeclinationTextField"
                                   text="00 00 00.0">
                        </TextField>
                    </LabeledPane>
                </HBox>
                <Label StackPane.alignment="BOTTOM_RIGHT"
                       alignment="CENTER"
                       minWidth="28.0"
                       minHeight="28.0"
                       onMouseClicked="#openTargetCoordinatesMenu"
                       styleClass="text-grey-200,mdi,mdi-sm,cursor-hand"
                       text="󰇙">
                    <fx:define>
                        <ContextMenu fx:id="targetCoordinatesContextMenu"
                                     styleClass="text-md">
                            <items>
                                <MenuItem onAction="#loadLocation"
                                          text="Load current location"
                                          userData="BIND_TO_SELECTED_MOUNT,JNOW"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load current location (J2000)"
                                          userData="BIND_TO_SELECTED_MOUNT,J2000"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load zenith location"
                                          userData="BIND_TO_SELECTED_MOUNT,ZENITH"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load north celestial pole location"
                                          userData="BIND_TO_SELECTED_MOUNT,NORTH_POLE"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load south celestial pole location"
                                          userData="BIND_TO_SELECTED_MOUNT,SOUTH_POLE"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load galactic center location"
                                          userData="BIND_TO_SELECTED_MOUNT,GALACTIC_CENTER"/>
                            </items>
                        </ContextMenu>
                    </fx:define>
                </Label>
            </StackPane>
            <HBox alignment="TOP_CENTER"
                  spacing="4.0">
                <Button fx:id="goToButton"
                        onAction="#goTo"
                        prefWidth="92.0"
                        text="Go To">
                    <graphic>
                        <Label styleClass="mdi,mdi-sm,text-green-500"
                               text="󰄬">
                        </Label>
                    </graphic>
                </Button>
                <Button fx:id="slewToButton"
                        onAction="#slewTo"
                        prefWidth="92.0"
                        text="Slew To">
                    <graphic>
                        <Label styleClass="mdi,mdi-sm,text-green-500"
                               text="󰄬">
                        </Label>
                    </graphic>
                </Button>
                <Button fx:id="syncButton"
                        onAction="#sync"
                        prefWidth="92.0"
                        text="Sync">
                    <graphic>
                        <Label styleClass="mdi,mdi-sm,text-blue-700"
                               text="󰓦">
                        </Label>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
        <HBox spacing="12.0">
            <VBox spacing="2.0">
                <HBox alignment="CENTER"
                      spacing="2.0">
                    <IconButton fx:id="nudgeNEButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="NE">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰧄">
                            </Label>
                        </graphic>
                    </IconButton>
                    <IconButton fx:id="nudgeNButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="N">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰜷">
                            </Label>
                        </graphic>
                    </IconButton>
                    <IconButton fx:id="nudgeNWButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="NW">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰧆">
                            </Label>
                        </graphic>
                    </IconButton>
                </HBox>
                <HBox alignment="CENTER"
                      spacing="2.0">
                    <IconButton fx:id="nudgeEButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="E">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰜱">
                            </Label>
                        </graphic>
                    </IconButton>
                    <IconButton fx:id="abortButton"
                                onAction="#abort"
                                size="48.0">
                        <graphic>
                            <Label styleClass="mdi,mdi-md,text-red-500"
                                   text="󰅙">
                            </Label>
                        </graphic>
                    </IconButton>
                    <IconButton fx:id="nudgeWButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="W">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰜴">
                            </Label>
                        </graphic>
                    </IconButton>
                </HBox>
                <HBox alignment="CENTER"
                      spacing="2.0">
                    <IconButton fx:id="nudgeSEButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="SE">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰦸">
                            </Label>
                        </graphic>
                    </IconButton>
                    <IconButton fx:id="nudgeSButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="S">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰜮">
                            </Label>
                        </graphic>
                    </IconButton>
                    <IconButton fx:id="nudgeSWButton"
                                onMousePressed="#nudgeTo"
                                onMouseReleased="#nudgeTo"
                                size="48.0"
                                userData="SW">
                        <graphic>
                            <Label styleClass="text-blue-700,mdi,mdi-md"
                                   text="󰦺">
                            </Label>
                        </graphic>
                    </IconButton>
                </HBox>
            </VBox>
            <VBox alignment="TOP_CENTER"
                  spacing="8.0"
                  HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <LabeledPane text="Tracking"
                                 HBox.hgrow="ALWAYS"
                                 textStyleClass="text-bold">
                        <ToggleSwitch fx:id="trackingToggleSwitch"
                                      maxWidth="25.0"/>
                    </LabeledPane>
                </HBox>
                <HBox alignment="CENTER_LEFT"
                      spacing="4.0">
                    <LabeledPane text="Tracking mode"
                                 HBox.hgrow="ALWAYS"
                                 textStyleClass="text-bold">
                        <ChoiceBox fx:id="trackingModeChoiceBox"
                                   minWidth="105.0"/>
                    </LabeledPane>
                    <LabeledPane text="Slew speed"
                                 HBox.hgrow="ALWAYS"
                                 textStyleClass="text-bold">
                        <ChoiceBox fx:id="slewSpeedChoiceBox"
                                   minWidth="105.0"/>
                    </LabeledPane>
                </HBox>
                <HBox alignment="CENTER_LEFT"
                      spacing="4.0">
                    <TwoStateButton fx:id="parkButton"
                                    onAction="#park"
                                    stateOnStyleClass="mdi,mdi-sm,text-green-500"
                                    stateOffStyleClass="mdi,mdi-sm,text-red-500"
                                    stateOnText="Unpark"
                                    stateOffText="Park"
                                    stateOnIcon="󰐊"
                                    stateOffIcon="󰓛">
                    </TwoStateButton>
                    <Button fx:id="homeButton"
                            onAction="#home"
                            text="Home">
                        <graphic>
                            <Label styleClass="mdi,mdi-sm,text-blue-700"
                                   text="󰋜">
                            </Label>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
