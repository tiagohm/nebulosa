<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import nebulosa.desktop.gui.control.*?>
<?import org.controlsfx.control.SegmentedButton?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefWidth="412.0"
            stylesheets="@css/Global.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="4.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="16.0"
                    left="16.0"
                    right="16.0"
                    top="16.0"/>
        </padding>
        <HBox alignment="CENTER"
              spacing="4.0">
            <ChoiceBox fx:id="mountChoiceBox"
                       prefHeight="32.0"
                       prefWidth="394.0"/>
            <TwoStateButton fx:id="connectButton"
                            onAction="#connect">
                <MaterialIcon icon="close-circle"
                              TwoStateButton.state="true"
                              color="warning"/>
                <MaterialIcon icon="connection"/>
            </TwoStateButton>
            <ImageButton fx:id="openINDIButton"
                         onAction="#openINDIPanelControl"
                         url="@icons/indi.png"/>
        </HBox>
        <VBox alignment="CENTER"
              spacing="2.0">
            <GridPane hgap="4.0"
                      vgap="4.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <LabeledPane text="RA"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="0">
                    <Label fx:id="rightAscensionLabel"
                           styleClass="text-sm"
                           text="00h 00m 00.00s"/>
                </LabeledPane>
                <LabeledPane text="DEC"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="1">
                    <Label fx:id="declinationLabel"
                           styleClass="text-sm"
                           text="+00째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="RA (J2000)"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="2">
                    <Label fx:id="rightAscensionJ2000Label"
                           styleClass="text-sm"
                           text="00h 00m 00.00s"/>
                </LabeledPane>
                <LabeledPane text="DEC (J2000)"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="0"
                             GridPane.columnIndex="3">
                    <Label fx:id="declinationJ2000Label"
                           styleClass="text-sm"
                           text="+00째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="Azimuth"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="0">
                    <Label fx:id="azimuthLabel"
                           styleClass="text-sm"
                           text="000째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="Altitude"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="1">
                    <Label fx:id="altitudeLabel"
                           styleClass="text-sm"
                           text="+00째 00' 00.00&quot;"/>
                </LabeledPane>
                <LabeledPane text="LST"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="2">
                    <Label fx:id="lstLabel"
                           styleClass="text-sm"
                           text="00:00:00"/>
                </LabeledPane>
                <LabeledPane text="Constellation"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="1"
                             GridPane.columnIndex="3">
                    <Label fx:id="constellationLabel"
                           styleClass="text-sm"
                           text="-"/>
                </LabeledPane>
                <LabeledPane text="Meridian at"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="2"
                             GridPane.columnIndex="0"
                             GridPane.columnSpan="2">
                    <Label fx:id="meridianAtLabel"
                           styleClass="text-sm"
                           text="00:00:00 (-00:00:00)"/>
                </LabeledPane>
                <LabeledPane text="Pier"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="2"
                             GridPane.columnIndex="2">
                    <Label fx:id="pierSideLabel"
                           styleClass="text-sm"
                           text="NEITHER"/>
                </LabeledPane>
                <LabeledPane text="Status"
                             textStyleClass="text-bold"
                             GridPane.rowIndex="2"
                             GridPane.columnIndex="3">
                    <graphic>
                        <MaterialIcon icon="information"
                                      size="xs"/>
                    </graphic>
                    <Label fx:id="statusLabel"
                           text="idle"/>
                </LabeledPane>
            </GridPane>
        </VBox>
        <HBox alignment="CENTER_LEFT"
              spacing="4.0">
            <MaterialIcon text="Target Coordinates:"
                          icon="target"
                          size="xs"/>
            <SegmentedButton fx:id="targetCoordinatesEquinoxSegmentedButton">
                <buttons>
                    <ToggleButton text="JNow"
                                  userData="JNOW"/>
                    <ToggleButton selected="true"
                                  text="J2000"
                                  userData="J2000"/>
                </buttons>
            </SegmentedButton>
            <HBox alignment="CENTER"
                  spacing="4.0"
                  HBox.hgrow="ALWAYS">
                <MaterialIconButton fx:id="siteAndTimeButton"
                                    onAction="#openSiteAndTime"
                                    icon="map-marker"
                                    color="warning">
                </MaterialIconButton>
                <MaterialIconButton fx:id="telescopeControlServerButton"
                                    onAction="#openTelescopeControlServer"
                                    icon="remote">
                </MaterialIconButton>
            </HBox>
        </HBox>
        <VBox alignment="CENTER_LEFT"
              spacing="4.0">
            <VBox.margin>
                <Insets top="8.0"/>
            </VBox.margin>
            <StackPane>
                <HBox spacing="4.0"
                      StackPane.alignment="CENTER_LEFT">
                    <LabeledPane text="RA (hours)"
                                 textStyleClass="text-bold">
                        <TextField fx:id="targetRightAscensionTextField"
                                   text="00 00 00.0"/>
                    </LabeledPane>
                    <LabeledPane text="DEC (hours)"
                                 textStyleClass="text-bold">
                        <TextField fx:id="targetDeclinationTextField"
                                   text="00 00 00.0"/>
                    </LabeledPane>
                </HBox>
                <MaterialIconButton StackPane.alignment="BOTTOM_RIGHT"
                                    onMouseClicked="#openTargetCoordinatesMenu"
                                    styleClass="cursor-hand"
                                    style="-fx-background-color: transparent; -fx-border-style: none; -fx-border-width: 0; -fx-border-insets: 0;"
                                    color="grey-500"
                                    icon="dots-vertical">
                    <fx:define>
                        <ContextMenu fx:id="targetCoordinatesContextMenu">
                            <items>
                                <MenuItem onAction="#loadLocation"
                                          text="Load current location"
                                          userData="BIND_TO_SELECTED_MOUNT,JNOW"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load current location (J2000)"
                                          userData="BIND_TO_SELECTED_MOUNT,J2000"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load zenith location"
                                          userData="BIND_TO_SELECTED_MOUNT,ZENITH"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load north celestial pole location"
                                          userData="BIND_TO_SELECTED_MOUNT,NORTH_POLE"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load south celestial pole location"
                                          userData="BIND_TO_SELECTED_MOUNT,SOUTH_POLE"/>
                                <MenuItem onAction="#loadLocation"
                                          text="Load galactic center location"
                                          userData="BIND_TO_SELECTED_MOUNT,GALACTIC_CENTER"/>
                            </items>
                        </ContextMenu>
                    </fx:define>
                </MaterialIconButton>
            </StackPane>
            <HBox alignment="TOP_CENTER"
                  spacing="4.0">
                <MaterialIconButton fx:id="goToButton"
                                    onAction="#goTo"
                                    text="Go To"
                                    icon="check"
                                    color="green-500"/>
                <MaterialIconButton fx:id="slewToButton"
                                    onAction="#slewTo"
                                    text="Slew To"
                                    icon="check"
                                    color="green-500"/>
                <MaterialIconButton fx:id="syncButton"
                                    onAction="#sync"
                                    text="Sync"
                                    icon="sync"/>
            </HBox>
        </VBox>
        <HBox spacing="12.0">
            <VBox spacing="2.0">
                <HBox alignment="CENTER"
                      spacing="2.0">
                    <MaterialIconButton fx:id="nudgeNEButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-top-left-thick"
                                        size="md"
                                        userData="NE"/>
                    <MaterialIconButton fx:id="nudgeNButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-up-thick"
                                        size="md"
                                        userData="N"/>
                    <MaterialIconButton fx:id="nudgeNWButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-top-right-thick"
                                        size="md"
                                        userData="NW"/>
                </HBox>
                <HBox alignment="CENTER"
                      spacing="2.0">
                    <MaterialIconButton fx:id="nudgeEButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-left-thick"
                                        size="md"
                                        userData="E"/>
                    <MaterialIconButton fx:id="abortButton"
                                        onAction="#abort"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="close-circle"
                                        size="md"
                                        color="warning"/>
                    <MaterialIconButton fx:id="nudgeWButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-right-thick"
                                        size="md"
                                        userData="W"/>
                </HBox>
                <HBox alignment="CENTER"
                      spacing="2.0">
                    <MaterialIconButton fx:id="nudgeSEButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-bottom-left-thick"
                                        size="md"
                                        userData="SE"/>
                    <MaterialIconButton fx:id="nudgeSButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-down-thick"
                                        size="md"
                                        userData="S"/>
                    <MaterialIconButton fx:id="nudgeSWButton"
                                        onMousePressed="#nudgeTo"
                                        onMouseReleased="#nudgeTo"
                                        prefWidth="48.0"
                                        prefHeight="48.0"
                                        icon="arrow-bottom-right-thick"
                                        size="md"
                                        userData="SW"/>
                </HBox>
            </VBox>
            <VBox alignment="TOP_CENTER"
                  spacing="4.0"
                  HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <LabeledPane text="Tracking"
                                 HBox.hgrow="ALWAYS"
                                 textStyleClass="text-bold">
                        <SwitchSegmentedButton fx:id="trackingSwitch"/>
                    </LabeledPane>
                </HBox>
                <HBox alignment="CENTER_LEFT"
                      spacing="4.0">
                    <LabeledPane text="Tracking mode"
                                 HBox.hgrow="ALWAYS"
                                 textStyleClass="text-bold">
                        <ChoiceBox fx:id="trackingModeChoiceBox"
                                   maxWidth="Infinity"/>
                    </LabeledPane>
                    <LabeledPane text="Slew speed"
                                 HBox.hgrow="ALWAYS"
                                 textStyleClass="text-bold">
                        <ChoiceBox fx:id="slewSpeedChoiceBox"
                                   maxWidth="Infinity"/>
                    </LabeledPane>
                </HBox>
                <HBox alignment="CENTER"
                      spacing="4.0">
                    <TwoStateButton fx:id="parkButton"
                                    onAction="#park">
                        <MaterialIcon icon="play"
                                      TwoStateButton.state="true"
                                      text="Unpark"
                                      color="green-500"/>
                        <MaterialIcon icon="stop"
                                      text="Park"
                                      color="warning"/>
                    </TwoStateButton>
                    <MaterialIconButton fx:id="homeButton"
                                        onAction="#home"
                                        text="Home"
                                        icon="home"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
